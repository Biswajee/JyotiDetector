<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/splash_image"
        android:background="@drawable/vector_banner" />

    <TextView
        android:id="@+id/myImageViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/splash_image"
        android:layout_alignTop="@id/splash_image"
        android:layout_alignRight="@id/splash_image"
        android:layout_alignBottom="@id/splash_image"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Jyoti"
        android:fontFamily="serif-monospace"
        android:textSize="100sp"
        android:textColor="#fff" />

</RelativeLayout>
